/* miniprogram/pages/index/index.wxss */
.catagory-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 15rpx;
  margin-left: 15rpx;
  align-items: center;
  justify-items: center;
}

.catagory-item {
  width: 320rpx;
  height: 320rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: bold;
}

.cat-recycle {
  color: #fff;
  background-color: #154982;
}

.cat-harm {
  color: #fff;
  background-color: #e43122;
}

.cat-kitchen {
  color: #fff;
  background-color: #0e793b;
}

.cat-other {
  color: #fff;
  background-color: #acabab;
}

.cat-button {
  width: inherit!important;
  height: inherit;
  color: inherit;
  background-color: rgb(0, 0, 0, 0);
}

.detail-container {
  position: fixed;
  overflow: hidden;
  width: 90%;
  top: 100rpx;
  height: 80%;
  border-radius: 10rpx;
  border-color: green;
  border-width: 10rpx;
  font-size: 40rpx;
  color: #000;
  background-color: #FAFAFA;
  z-index: 1001;
}

.detail-content {
  height: 82%;
  overflow-y: scroll;
}

.detail-title {
  margin-left: 10rpx;
  padding: 10rpx;
  font-size: 25px;
  border-bottom: 4rpx solid #E8E8EA;
}

.detail-subtitle {
  margin-left: 20rpx;
  padding: 10rpx;
  font-size: 25px;
  border-bottom: 4rpx solid #E8E8EA;
}

.detail-item {
  font-size: 20px;
  margin-top: 10rpx;
  margin-left: 30rpx;
  padding: 10rpx;
  border-bottom: 3rpx solid #E8E8EA;
}
.btn-ok {
  position: relative;
  bottom: 0px;
  height: 60rpx;
  width: 100%;
  font: 20px "microsoft yahei";
  color: #12c509;
  text-align: center;
  z-index: 1001;
}

.detail-mask {
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: rgb(0, 0, 0, 0.3);
  z-index: 1000;
}
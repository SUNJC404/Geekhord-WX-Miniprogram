/* miniprogram/pages/index/index.wxss */


.start-container {
  width: 100%;
}

.btnstart {
  color:  #004466;
  line-height: 230rpx;
  font-size: larger;
  background: linear-gradient(to right, rgb(199, 210, 254), rgb(254, 202, 202), rgb(254, 249, 195));
  height: 250rpx;
  width: 650rpx !Important;
  margin: auto;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.catagory-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 20rpx;
  margin-right: 20rpx;
  align-items: center;
  justify-items: center;
}

.catagory-item {
  width: 650rpx;
  height: 160rpx;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: bold;
}

.cat-C {
  color: #fff;
  background-color: #845EC2;
}

.cat-D {
  color: #fff;
  background-color: #D65DB1;
}

.cat-E {
  color: #fff;
  background-color: #FF6F91;
}

.cat-F {
  color: #fff;
  size: 20px;
  background-color: #FF9671;
}

.cat-G {
  color: #fff;
  background-color: #ffb171;
}

.cat-A {
  color: #fff;
  background-color: #FFC75F;
}

.cat-B {
  color: #fff;
  background-color: #F9F871;
}

.cat-button {
  width: inherit!important;
  height: inherit;
  color: inherit;
  background-color: rgb(0, 0, 0, 0);
  font-size: 100rpx;
  text-align: center;
  line-height: 120rpx;
}

.detail-container {
  position: fixed;
  overflow: hidden;
  width: 90%;
  top: 100rpx;
  height: 65%;
  border-radius: 10rpx;
  border-color: #1ab37f;
  border-width: 10rpx;
  font-size: 30rpx;
  color: #000;
  background-color: #FAFAFA;
  z-index: 1001;
}

.detail-content {
  display: flex;
  flex-direction: line;
  height: 75%;
  overflow-y: scroll;
  justify-items: center;
}

.detail-title {
  margin-left: 10rpx;
  padding: 10rpx;
  font-size: 25px;
  border-bottom: 4rpx solid #E8E8EA;
}

.detail-subtitle {
  width: 20%;
  margin-left: 20rpx;
  padding: 10rpx;
  font-size: 15px;
  align-items: center;
  justify-items: center;
}

.detail-item {
  font-size: 20px;
  margin-top: 10rpx;
  margin-left: 35rpx;
  padding: 10rpx;
  flex-direction: row-reverse;
  align-items: center;
  justify-items: center;
}
.btn-ok {
  position: relative;
  bottom: 0px;
  height: 60rpx;
  width: 100%;
  font: 20px "microsoft yahei";
  color: #12c509;
  text-align: center;
  z-index: 1001;
}

.detail-mask {
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: rgb(0, 0, 0, 0.3);
  z-index: 1000;
}